{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceRoot}/main.cpp",
				"${workspaceRoot}/Graphics.cpp",
				"${workspaceRoot}/Window.cpp",
				"${workspaceRoot}/Board.cpp",
				"${workspaceRoot}/Button.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lSDL2",
				"-lSDL2_image"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}